@using Microsoft.AspNetCore.Identity
@using Publi4.Domain.Entities

@inject SignInManager<Publi4User> SignInManager
@inject UserManager<Publi4User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-top-links navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Olá @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <a asp-controller="Account" asp-action="LogOff">
                    <i class="fa fa-sign-out"></i>
                </a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-top-links navbar-right">
        <li><a asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
@using Microsoft.AspNetCore.Identity
@using Publi4.Domain.Entities
@inject UserManager<Publi4User> UserManager
@model Publi4.Models.AccountViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Publi4</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <partial name="_StylesPartial" />


</head>
<body class="gray-bg md-skin">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">P4+</h1>

            </div>
            <h3>Welcome to P4+</h3>
            <p>
                Perfectly designed and precisely prepared admin theme with over 50 pages with extra new web app views.
            </p>
            <p>Login in. To see it in action.</p>
            <form asp-controller="Account" asp-action="Login"
                  asp-route-returnurl="@ViewData["ReturnUrl"]"
                  class="m-t" role="form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Usuário" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Senha" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Login</button>

                <a href="#"><small>Forgot password?</small></a>
                <p class="text-muted text-center"><small>Do not have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="@Url.Action(" Register", "Pages" )">Create an account</a>
            </form>
            <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2015</small> </p>
        </div>
    </div>
    <partial name="_ScriptsPartial" />
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
